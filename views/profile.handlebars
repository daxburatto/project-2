<h1>Hello, {{user.username}}</h1>

<br>

<h2>Tell us about your dog!</h2>


<div class="container">
    <div class="row justify-content-center">
        <form class="dog-form">
            <div>
                <label for="dog-name">Name:</label>
                <input type="text" placeholder="Bones" id="dog-name" />
            </div>

            <div>
                <label for="dog-breed">Breed:</label>
                <input type="text" placeholder="German Shepherd" id="dog-breed" />
            </div>

            <div>
                <label for="dog-gender">Gender:</label>
                <input type="text" placeholder="Male/Female" id="dog-gender" />
            </div>

            <div>
                <label for="dog-age">Age:</label>
                <input type="number" placeholder="Ex: 1" id="dog-age" />
            </div>

            <div>
                <label for="dog-bio">Bio:</label>
                <input type="text" placeholder="Happy" id="dog-bio" />
            </div>

            <div>
                <label for="dog-weight">Weight:</label>
                <input type="number" placeholder="Ex: 20" id="dog-weight" />
            </div>

            <div>
                <label for="dog-energy">Energy:</label>
                <input type="number" placeholder="Enter a number 1-5 (low-high)" id="dog-energy" />
            </div>

            <div>
                <label for="dog-patience">Patience:</label>
                <input type="number" placeholder="Enter a number 1-5 (low-high)" id="dog-patience" />
            </div>

            <div>
                <label for="dog-dominance">Dominance:</label>
                <input type="number" placeholder="Enter a number 1-5 (low-high)" id="dog-dominance" />
            </div>

            <div>
                <label for="dog-image">Image:</label>
                <input type="text" placeholder=" Ex: https://image.com" id="dog-image" />
            </div>

            <div>
                <label for="user-id">User ID</label>
                <input type="number" value="{{userid}}" readonly="readonly" id="user-id" />
            </div>

            <button id="dog-submit" type="submit">Add Dog</button>

        </form>
    </div>
</div>

<script src="/javascript/dog.js"></script>